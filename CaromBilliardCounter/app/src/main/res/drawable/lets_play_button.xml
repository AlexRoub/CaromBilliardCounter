<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />   <!-- set radius of corner-->
            <stroke android:width="2dp" android:color="#35B606" /> <!--// set color and width of border -->
            <solid android:color="#000000" />  <!-- inner bgcolor -->
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />   <!-- set radius of corner-->
            <stroke android:width="2dp" android:color="#989898" /> <!--// set color and width of border -->
            <solid android:color="#989898"/>
        </shape>
    </item>
</selector>