<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:soundEffectsEnabled="false"
    tools:context="com.dimitriadism.carombilliardcounter.NewGameActivity">

    <TextView
        android:id="@+id/currentPlayer1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:gravity="bottom|center|center_horizontal|center_vertical"
        android:maxLines="1"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontal18"
        app:layout_constraintEnd_toStartOf="@id/guidelineVertical45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/currentPlayer2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:gravity="bottom|center|center_horizontal|center_vertical"
        android:maxLines="1"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/currentPlayer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical55"
        app:layout_constraintTop_toTopOf="@+id/currentPlayer1"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/currentScore1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border_theme"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontal52"
        app:layout_constraintEnd_toStartOf="@id/guidelineVertical45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorizontal25"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/currentScore2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border_theme"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontal52"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical55"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorizontal25"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/currentWinningScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="#FF9800"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/addScore1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:gravity="center"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="3"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#D274B9F4"
        android:textColorLink="#001497"
        android:textCursorDrawable="@drawable/cursor_for_user_input"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontal78"
        app:layout_constraintEnd_toStartOf="@id/guidelineVertical45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorizontal52"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/addScore2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:gravity="center"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="3"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#D274B9F4"
        android:textColorLink="#001497"
        android:textCursorDrawable="@drawable/cursor_for_user_input"
        app:layout_constraintBottom_toBottomOf="@+id/addScore1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical55"
        app:layout_constraintTop_toTopOf="@+id/addScore1"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/okAdd1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/add_caroms_buttons"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Πρόσθεση"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/okRemove1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorizontal78"
        tools:ignore="HardcodedText,OnClick" />

    <Button
        android:id="@+id/okAdd2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/add_caroms_buttons"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Πρόσθεση"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toStartOf="@+id/okRemove2"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical55"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorizontal78"
        tools:ignore="HardcodedText,OnClick" />

    <ImageButton
        android:id="@+id/addOneToAddScore1"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:background="@drawable/plus_minus_button"
        android:contentDescription="TODO"
        android:tint="#018807"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontal78"
        app:layout_constraintStart_toStartOf="@+id/addScore1"
        app:layout_constraintTop_toBottomOf="@+id/addScore1"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@android:drawable/ic_input_add"
        tools:ignore="ContentDescription,HardcodedText,OnClick" />

    <ImageButton
        android:id="@+id/addOneToAddScore2"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:background="@drawable/plus_minus_button"
        android:contentDescription="TODO"
        android:tint="#018807"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontal78"
        app:layout_constraintStart_toStartOf="@+id/addScore2"
        app:layout_constraintTop_toBottomOf="@+id/addScore2"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@android:drawable/ic_input_add"
        tools:ignore="ContentDescription,HardcodedText,OnClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Σερί"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/addScore1"
        app:layout_constraintEnd_toStartOf="@id/guidelineVertical55"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical45"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center|center_horizontal|center_vertical"
        android:maxLines="1"
        android:text="-"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontal52"
        app:layout_constraintEnd_toStartOf="@id/guidelineVertical55"
        app:layout_constraintStart_toEndOf="@+id/guidelineVertical45"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorizontal25"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/okRemove1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/subtract_caroms_buttons"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Αφαίρεση"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/okAdd1"
        app:layout_constraintEnd_toStartOf="@id/guidelineVertical45"
        app:layout_constraintStart_toEndOf="@+id/okAdd1"
        app:layout_constraintTop_toTopOf="@+id/okAdd1"
        tools:ignore="HardcodedText,OnClick" />

    <Button
        android:id="@+id/okRemove2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/subtract_caroms_buttons"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Αφαίρεση"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/okAdd2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/okAdd2"
        app:layout_constraintTop_toTopOf="@+id/okAdd2"
        tools:ignore="HardcodedText,OnClick" />

    <ImageButton
        android:id="@+id/player1Turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:contentDescription="TODO"
        android:tint="#2FFF00"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontal25"
        app:layout_constraintEnd_toStartOf="@id/guidelineVertical45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guidelineHorizontal18"
        app:layout_constraintVertical_bias="0.8"
        app:srcCompat="@android:drawable/arrow_down_float"
        tools:ignore="ContentDescription,HardcodedText" />

    <ImageButton
        android:id="@+id/player2Turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:contentDescription="TODO"
        android:tint="#2FFF00"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontal25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical55"
        app:layout_constraintTop_toBottomOf="@id/guidelineHorizontal18"
        app:layout_constraintVertical_bias="0.8"
        app:srcCompat="@android:drawable/arrow_down_float"
        tools:ignore="ContentDescription,HardcodedText" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Νικητήριες Καραμπόλες"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontal18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/removeOneFromAddScore1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/plus_minus_button"
        android:contentDescription="TODO"
        android:paddingStart="1dp"
        android:paddingLeft="1dp"
        android:paddingEnd="2dp"
        android:paddingRight="2dp"
        android:tint="#D50000"
        app:layout_constraintBottom_toBottomOf="@+id/addOneToAddScore1"
        app:layout_constraintEnd_toEndOf="@+id/addScore1"
        app:layout_constraintTop_toTopOf="@+id/addOneToAddScore1"
        app:srcCompat="@android:drawable/ic_input_delete"
        tools:ignore="ContentDescription,HardcodedText" />

    <ImageView
        android:id="@+id/removeOneFromAddScore2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/plus_minus_button"
        android:paddingStart="1dp"
        android:paddingLeft="1dp"
        android:paddingEnd="2dp"
        android:paddingRight="2dp"
        android:tint="#D50000"
        app:layout_constraintBottom_toBottomOf="@+id/addOneToAddScore2"
        app:layout_constraintEnd_toEndOf="@+id/addScore2"
        app:layout_constraintTop_toTopOf="@+id/addOneToAddScore2"
        app:srcCompat="@android:drawable/ic_input_delete"
        tools:ignore="ContentDescription" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineHorizontal18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineHorizontal25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineVertical45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineVertical55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineHorizontal52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.52" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineHorizontal78"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.78" />

    <android.support.constraint.Barrier
        android:id="@+id/barrierPlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="currentPlayer1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <android.support.constraint.Barrier
        android:id="@+id/barrierPlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="currentPlayer2"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="16dp" />


</android.support.constraint.ConstraintLayout>
